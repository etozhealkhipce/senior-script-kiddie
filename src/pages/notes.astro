---
import Layout from "../layouts/layout.astro";
---

<Layout>
  <div class="space-y-6">
    <h1 class="text-3xl lg:text-4xl font-bold">Notes</h1>
    <p class="text-lg text-neutral-300">
      My thoughts, tutorials, and technical notes.
    </p>
    <div class="space-y-4">
      <div class="p-6 bg-neutral-800 rounded-lg">
        <h3 class="text-xl font-semibold mb-2">Note 1</h3>
        <p class="text-neutral-300">Your first note or tutorial.</p>
      </div>
      <div class="p-6 bg-neutral-800 rounded-lg">
        <h3 class="text-xl font-semibold mb-2">Note 2</h3>
        <p class="text-neutral-300">Your second note or tutorial.</p>
      </div>
    </div>
  </div>
</Layout>
